<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="patwa.aman.com.upasanamandir.GalleryUpload">

    <include layout="@layout/navigation_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_admin_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/admin_name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt_admin_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/admin_password"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/guruji"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/maharaja" />
</LinearLayout>
